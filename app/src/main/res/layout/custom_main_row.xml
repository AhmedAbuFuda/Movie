<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:id="@+id/image_main"
                android:src="@mipmap/ic_launcher"
                >
            </ImageView>

            <TextView
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_main"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:text="Title"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Title"
                android:layout_below="@id/main_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:id="@+id/main_date"
                ></TextView>

            <TextView
                android:id="@+id/main_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_date"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="Title"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                android:textStyle="normal"></TextView>

            <RatingBar
                android:id="@+id/main_rate_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/main_rate"
                android:numStars="1"></RatingBar>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/love"
                android:layout_below="@id/main_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/main_love"
                ></ImageView>





        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>